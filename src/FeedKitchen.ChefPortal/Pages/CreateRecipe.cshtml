@page
@model CreateRecipeModel
@{
    ViewData["Title"] = "FeedKitchen - Home page";
}
<div class="text-center">
    <h1 class="display-4">Welcome to FeedKitchen</h1>
</div>

<div class="row">
    <form class="form-horizontal" method="post">
        <div class="form-group">
            @Html.LabelFor(m=>m.Title, new {cssClass = "col-sm-2 control-label"})
            <div class="col-sm-10">
                @Html.TextBoxFor(m=>m.Title, new {cssClass = "form-control"})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m=>m.Description, new {cssClass = "col-sm-2 control-label"})
            <div class="col-sm-10">
                @Html.TextAreaFor(m=>m.Description, new {cssClass = "form-control"})
            </div>
        </div>
        <div class="form-group">
            <button type="reset" class="btn btn-secondary">Reset</button>
            <button type="submit" class="btn btn-primary">Save</button>
        </div>


    </form>
</div>